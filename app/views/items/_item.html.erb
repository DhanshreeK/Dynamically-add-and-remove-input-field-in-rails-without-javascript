<h3>Add Items:</h3>
  <div class="form-group">
<%= form_with(model: [@product, @product.items.build ]) do |form| %>
   <div class="form-group">
   <%= form.label :item_name %>
    <%= form.text_field :item_name %>
    </div>
     <div class="form-group">
     <%= form.label :item_price %>
    <%= form.text_field :price %>
    </div>
 <div class="form-group">
 <%= form.label :item_quantity %>
    <%= form.text_field :quantity %>
    </div>
  <div class="form-group"> 
    <%= form.submit %>
    </div>
<% end %></div>
